print("welcome to my ocean Sustainability quiz!")
name = input("What is your name?\n") #asks users name
print("Hello " + name + "!\n")
print("Welcome to my Ocean sustainability quiz, " + name + '!\n') #welcomes the user


def start_quiz():
    print("welcome to my quiz about ocean sustainability")


def main():
    score = 0
    counter = 0
    # question 1
    while counter < 3:

        def question(question, choices):
            print(question)
            for question in choices:
                print(question)

        question(
            "Q1.What is the most littered item in the worlds ocean?",
            ["A. Cigarette butts", "B. Plastic Bags", "C. Bottle Caps", "D. Plastic Containers"
             ]) #asks user the questions with multiple answers to choose from
        answer = input().lower()

        if answer == "a":
            print("Correct, the answer is A, cigarette butts are the most littered item in our ocean!\n")
            score = score + 1 #adds to the users score
            counter = 4
        elif answer == "Cigarette butts":
            print("Correct, the answer is Cigarette butts!\n")
            score = score + 1
            counter = 4
            break
        else:
            counter = counter + 1
            if counter == 3:
                print("Incorrect! The correct answer is A. Cigarette butts\n"
                      )
            elif counter == 1 or 2:
                print(
                    "Incorrect! Try again...\n"
                )
    print("Your score is ", score) #prints users score
    print('\n') #adds a line

    # question 2
    counter = 0
    while counter < 3:

        def question(question, choices):
            print(question)
            for question in choices:
                print(question)

        question(
            "Q2. How many marine animals are estimated to be killed per year due to plastic pollution?",
            ["A. 45,000", "B. 550,000", "C. 220,000", "D. 100,000"
             ])
        answer = input().lower()

        if answer == "d":
            print("Correct, the answer is d, 100,000!\n")
            score = score + 1
            counter = 4
        elif answer == "100,000":
            print("Correct, the answer is d, 100,000 marine animals are estimated to be killed per year!\n")
            score = score + 1
            counter = 4
            break
        else:
            counter = counter + 1
            if counter == 3:
                print("incorrect! The correct answer is D, 100,000!\n"
                      )
            elif counter == 1 or 2:
                print(
                    "Incorrect! Try again...\n"
                )
    print("Your score is ", score)
    print('\n')

    # question 3
    counter = 0
    while counter < 3:

        def question(question, choices):
            print(question)
            for question in choices:
                print(question)

        question(
            "Q3. How much plastic is estimated to be dumped into our oceans daily?",
