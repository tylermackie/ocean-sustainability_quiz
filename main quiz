            elif counter == 1 or 2:
                print(
                    "Incorrect! Try again...\n"
                )
    print("Your score is ", score)
    print('\n')

    print("For the next 2 questions, please answer with true/T or false/T")

    # question 5
    while counter < 3:

        def question(question, choices):
            print(question)
            for question in choices:
                print(question)

        question(
            "Q5. How many sea turtles die yearly due to plastic pollution",
            ["A. 10,000", "B. 20,000", "C. 1,000", "D. 35,000"
             ])
        answer = input().lower()

        if answer == "a":
            print("Correct, 1,000 sea turtles die each year just due to ocean pollution, which leads to them "
                  "being one of the most endangered marine animal in the ocean!\n")
            score = score + 1
            counter = 4
        elif answer == "T":
            print("Correct, 1,000 sea turtles die each year just due to ocean pollution, which leads to them "
                  "being one of the most endangered marine animal in the ocean!\n")
            score = score + 1
            counter = 4
            break
        else:
            counter = counter + 1
            if counter == 3:
                print(
                    "Incorrect! 1,000 sea turtles die each year just due to ocean pollution, which leads to them "
