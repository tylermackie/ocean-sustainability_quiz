            counter = 4
        elif answer == "8 billion tons":
            print("Correct, the answer 8 billion tons!\n")
            score = score + 1
            counter = 4
            break
        else:
            counter = counter + 1
            if counter == 3:
                print("incorrect! The correct answer is B, 8 million tons!\n"
                      )
            elif counter == 1 or 2:
                print(
                    "Incorrect! Try again...\n"
                )
    print("Your score is ", score)
    print('\n')

    # question 4
    while counter < 3:

        def question(question, choices):
            print(question)
            for question in choices:
                print(question)

        question(
            "Q4. How many people helped clean up the ocean coasts during last years international coastal cleanup?",
            ["A. 7 million", "B. 800,000", "C. 17,000,000", "D. 1,500,000"
             ])
        answer = input().lower()

        if answer == "c":
            print("Correct, the answer is c, 17 million people helped during last years international coastal "
                  "cleanup!\n")
            score = score + 1
            counter = 4
        elif answer == "17,000,000":
            print("Correct, the answer is c, 17 million people helped during last years international coastal "
                  "cleanup!\n")
            score = score + 1
            counter = 4
            break
        else:
            counter = counter + 1
            if counter == 3:
                print("Incorrect! The correct answer is c, 17 million people helped during last years international "
